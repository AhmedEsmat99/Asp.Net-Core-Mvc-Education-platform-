@model InstructorViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_InstructorLayout";
    SelectList listdept = new SelectList(ViewBag.ListDepart, "Id", "Name");
}
@section NavbarLinks{
    <li class=""><a class="nav-link " asp-action="index"asp-controller="Instructor">Home</a></li>
        <li class=""><a class="nav-link active"asp-route-id="@Model.Id" asp-action="Profile"asp-controller="Instructor" >Profile</a></li>
        <li class=""><a class="nav-link" asp-action="Student" asp-route-id="@Model.Id" asp-controller="Instructor">Student</a></li>
}
<div class="container">
<h1>Edit</h1>
<h4>Instructor : @Model.Name</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ExistingImage" type="hidden" value="@Model.ExistingImage" />
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="custom-file">
                    <input  asp-for="Image" class="custom-file-input" style="cursor:pointer" />
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
                <img src="~/image/Instructor/@ViewBag.img" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
            </div>
            <div class="form-group">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="ExistIdDept" value="@Model.Idept" />
                <label asp-for="Idept" class="control-label"></label>
                <select asp-items="listdept" asp-for="Idept" class="form-control">

                </select>
                <span asp-validation-for="Idept" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group w-100 text-center">
                <input type="submit" value="Save" class="btn btn-primary  pr-5 pl-5"  />
            </div>
    </div>
</form>
</div>
