@model Education_platform.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<html>
    <head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css?family=Raleway:400,400i,500,500i,600,600i,700,700i,800,800i" rel="stylesheet">
	<!-- Stylesheets -->
	<link rel="stylesheet" href="/css/bootstrap.min.css"/>
	<link rel="stylesheet" href="/css/font-awesome.min.css"/>
	<link rel="stylesheet" href="/css/owl.carousel.css"/>
	<link rel="stylesheet" href="/css/style.css"/>
    </head>
    <body class="d-flex justify-content-center align-items-center">
      <section class="vh-100 d-flex">
        <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <form asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <!-- Email input -->
                <div class="form-outline mb-4">
                <input asp-for="Email" id="form3Example3" class="form-control form-control-lg" placeholder="Enter a valid email address" />
                <label asp-for="Email" class="form-label" for="form3Example3">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-3">
                <input asp-for="Password" id="form3Example4" class="form-control form-control-lg" placeholder="Enter password" />
                <label class="form-label" asp-for="Password" for="form3Example4">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                <!-- Checkbox -->
                <div class="form-check mb-0">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                </div>
                <div class="text-center text-lg-start mt-4 pt-2">
                <button type="submit" class="btn btn-primary btn-lg"
                    style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
                </div>
            </form>
            <div class="mt-3">
            <a asp-action="Register" asp-controller="Student" class="btn btn-outline-primary">Register Student</a>
            </div>
            </div>
        </div>
        </div>
      </section>
    </body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
